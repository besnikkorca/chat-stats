{
  "private": "true",
  "name": "server",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "codegen": "graphql-codegen --config codegen.yml",
    "seed": "ts-node src/services/db/seeders/DatabaseSeeder.ts",
    "migrate": "ts-node src/services/db/migrations/index.ts",
    "start": "ts-node src/index.ts",
    "start:dev": "nodemon src/index.ts",
    "start:build": "node build/index.js",
    "build": "run-s clean compile copy",
    "clean": "rm -rf build",
    "compile": "tsc --outDir build",
    "copy": "cp src/schema.graphql build/schema.graphql",
    "test": "run-s eslint:check prettier:check  jest",
    "jest": "jest --coverage",
    "eslint:check": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "prettier:write": "prettier --ignore-path ../.prettierignore --write \"**/*.{js,jsx,ts,tsx,json,md,css,scss}\"",
    "prettier:check": "prettier --ignore-path ../.prettierignore --list-different \"**/*.{js,jsx,ts,tsx,json,md,css,scss}\""
  },
  "dependencies": {
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "graphql": "^16.6.0",
    "typescript": "^4.8.4"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.13.1",
    "@graphql-codegen/introspection": "^2.2.1",
    "@types/express": "^4.17.14",
    "@types/nodemon": "^1.19.2",
    "@types/supertest": "^2.0.12",
    "jest": "^29.1.1",
    "nodemon": "^2.0.20",
    "supertest": "^6.2.4",
    "ts-node": "^10.9.1"
  }
}
